  # Используем базовый образ Python, например, python:3.8
   FROM python:3.8

   # Копируем файлы проекта в контейнер
   COPY . /app

   # Устанавливаем зависимости проекта
   RUN pip install -r /app/requirements.txt
   
   # Опционально, если вашему проекту требуется какая-то дополнительная настройка среды
   # RUN ....

   # Указываем рабочую директорию
   WORKDIR /app

   # Запускаем приложение
   CMD ["python", "app.py"]  # здесь предполагается, что ваш файл запуска называется "app.py"
